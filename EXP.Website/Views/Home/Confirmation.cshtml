@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <title>Expresspark</title>
    @Scripts.Render("~/bundles/account")
    @Styles.Render("~/Styles/reset.css", "~/Styles/style.css", "~/Styles/jquery.selectbox.css")
    <script>
        $(document).ready(function() {
            $.backstretch("/images/complete-bg.jpg", { speed: 'slow' });
        });
    </script>
</head>
<!-- End Head -->
<body>
    <div id="wrapper">
        <!--  begin header -->
        <div id="header">
            <div id="logo">
                <a id="home" href="/" title="Expresspark">Expresspark</a>
            </div>
        </div>
        <!-- end header -->
    </div>
    <!-- pop-ups -->
    <div id="overlay">
    </div>

    @Html.Partial("_FooterPartial")
    <!-- activation complete -->
    <div id="activation-complete" class="pop-up">
        <div class="title-bar">
            <a class="close" title="close" href="/"></a>
            <h3>Activation complete!</h3>
        </div>
        <div class="content">
            <p class="bold">Your account has been activated.</p>
            <p>Log in now to begin setting up your personal dashboard.</p>
            <form id="activation-complete-form" method="post" action='/'>
                <input class="button" type="submit" name="login" value="Log In" />
            </form>		
        </div>
    </div>
</body>
</html>