@{
    Layout = null;
}

<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="content-type" content="text/html; charset=UTF-8">
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewBag.Title</title>
        @Styles.Render("~/Styles/admin.css","~/Styles/datatables.css","~/Styles/bootstrap.css")
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryui")
        @Scripts.Render("~/Scripts/jquery.validate.min.js")
        @Scripts.Render("~/Scripts/admin.js")
        @Scripts.Render("~/Scripts/bootstrap.js")
        @Scripts.Render("~/Scripts/datatables.js")
        @Scripts.Render("~/Scripts/glDatePicker.min.js")
        <!--[if lt IE 9]>
          <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->
    </head>
    <body>
        <div class="navbar navbar navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <a class="brand" href="#">Management</a>
                    <div class="nav-collapse">
                        <ul class="nav">
                            <li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown">Buildings
                                <b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Add new building","EditBuilding")</li>
                                    <li>@Html.ActionLink("List buildings","Buildings")</li>
                                    <li>@Html.ActionLink("Search buildings","SearchBuilding")</li>
                                    <li>@Html.ActionLink("Building statistics","UnderConstruction")</li>
                                </ul>
                            </li>
                        </ul>
                        <ul class="nav">
                            <li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown">Lots
                                <b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Add new lot","EditLot")</li>
                                    <li>@Html.ActionLink("List lots","Lots")</li>
                                    <li>@Html.ActionLink("Search lot","SearchLot")</li>
                                    <li>@Html.ActionLink("Lot statistics","UnderConstruction")</li>
                                </ul>
                            </li>
                        </ul>
                        <ul class="nav">
                            <li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown">Reports
                                <b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                </ul>
                            </li>
                        </ul>
                        <ul class="nav">
                            <li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown">My Account
                                <b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Profile","UnderConstruction")</li>
                                    <li>@Html.ActionLink("Change Password","UnderConstruction")</li>
                                </ul>
                            </li>
                        </ul>
                        <ul class="nav">
                            <li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown">Administration
                                <b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Add user","EditUser")</li>
                                    <li>@Html.ActionLink("List users","Users")</li>
                                    <li>@Html.ActionLink("Search users","UnderConstruction")</li>
                                    <li class="bBorder">@Html.ActionLink("Search vehicle", "UnderConstruction")</li>
                                    <li>@Html.ActionLink("Add Make","CreateMake")</li>
                                    <li class="bBorder">@Html.ActionLink("List Makes","Makes")</li>
                                    <li>@Html.ActionLink("Invoice Adjustments","UnderConstruction")</li>
                                </ul>
                            </li>
                        </ul>
                        @*<ul class="nav pull-right">
                            <li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li><a href="#">Profile</a></li>
                                    <li><a href="#">LogOff</a></li>
                                </ul>
                            </li>
                        </ul>*@
                    </div>
                    <!--/.nav-collapse -->
                </div>
            </div>
        </div>
        <div class="container">
            @RenderBody()
            <hr>
            <footer>
                <p>© ExpressPark 2013</p>
            </footer>
        </div>
    </body>
</html>
